<%= month_calendar events: @calendar_items do |date, calendar_items| %>
  <%= content_tag :dt do %>
    <%= date.day %>
  <% end %>
  <%= content_tag :dd do %>
    <%= content_tag :ul do %>
      <% calendar_items.each do |item| %>
        <%= content_tag :li do %>
          <% time = item.start_time.strftime('%I:%M %P') %>
          <%= link_to "#{time} - #{item.title}", [:admin, item] %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
